<% layout("layouts/boiler_plate.ejs") %>
    <h3>All listings</h3>
   <!-- <form method="GET" action="/listings/new"> <button >create new listing</button> -->
    <div class="container d-flex justify-content-center">
    <div class="row  row-cols-lg-3 row-cols-md-2 mt-3 row-cols-sm-1 justify-content-center">
    <% for( listing of alllistings) { %>
        <a href="/listings/<%= listing._id%>" class="listing-link"> 
            <div class="listing-card col" style="width: 20rem;">
              <img 
                class="card-img-top" 
                src="<%= listing.image.url %>" 
                alt="" 
                style="height: 20rem" />
              <div class="card-img-overlay">WanderLand</div>
              <div class="card-body">
                <p class="card-text">
                   <b><%= listing.title %></b> <br>
                    <%= listing.price  %> /Night
                     +18%GST 
                   <!-- <i class="tax-info">&nbsp;+18% GST</i> -->
                </p>
              </div>
        
            </div>
            </a>
      <% } %>
    </div>
  </div>


