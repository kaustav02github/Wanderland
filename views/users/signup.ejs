<% layout("layouts/boiler_plate.ejs") %>
<div class="mt-3 row">
    <h1 class="col-6 offset-3">SignUp for WanderLand</h1>
<div class="col-6 offset-3 mb-5">
    <form action="/signup" method="post" class="needs-validation" novalidate>
    <div class="mb-3">  
        <label for="username" class="form-label"> <b>Enter Username</b> </label>
        <input name="username"
        id="username"
               type="text" 
                class="form-control" 
            required
                />
            <div class="valid-feedback">Nice username!</div>

    </div>

    <div class="mb-3">  
        <label for="email" class="form-label"> <b>Enter email</b> </label>
        <input name="email"
                id="email"
               type="text" 
                class="form-control" 
            required/>
            <div class="invalid-feedback">enter valid email_id</div>

    </div>
    
    <div class="mb-3">  
        <label for="password" class="form-label"> <b>password</b> </label>
        <input name="password"
                id="password"
               type="password" 
                class="form-control" 
            required/>


    </div>
    <button  class="btn btn-success">SignUp</button>
    </form>

</div>
</div>